<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/login_root"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/x16"
    android:paddingRight="@dimen/x16"
    android:background="@color/light_blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/y40">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:id="@+id/viewGroup_headPic"
            android:gravity="center"
            android:layout_marginBottom="@dimen/y10">
            <ImageView
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:padding="5px"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/imageView_headPic"
                android:background="@drawable/bg_circle_imageview"
                android:alpha="0.5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:orientation="horizontal"
            android:layout_below="@id/viewGroup_headPic"
            android:id="@+id/viewGroup_account"
            android:layout_marginBottom="@dimen/y10">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:id="@+id/et_account"
                android:hint="@string/tel"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:inputType="number"/>
            <ImageButton
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:background="@mipmap/tel_del"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x15"
                android:visibility="gone"
                android:id="@+id/imageBtn_tel_del"
                android:onClick="onClickImageBtnTelDel"/>
            <ImageButton
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x20"
                android:background="@mipmap/unfold"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x10"
                android:id="@+id/imageBtn_tel_fold_unfold"
                android:onClick="onClickImageBtnTelFold"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x15"
            android:id="@+id/tv_verify_account"
            android:text="请输入正确的手机号"
            android:textColor="@color/colorAccent"
            android:layout_below="@id/viewGroup_account"
            android:layout_marginBottom="@dimen/y10"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycleView_account"
            android:layout_below="@id/tv_verify_account"
            android:visibility="gone"></android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:orientation="horizontal"
            android:id="@+id/viewGroup_password"
            android:layout_below="@id/tv_verify_account"
            android:layout_marginBottom="@dimen/y10">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/et_password"
                android:gravity="center_vertical"
                android:hint="@string/password"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:background="@android:color/transparent"/>
            <ImageButton
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x20"
                android:background="@mipmap/close_eye"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x10"
                android:id="@+id/imageBtn_password_visible_invisible"
                android:onClick="onClickImageBtnPasswordVisible"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x15"
            android:id="@+id/tv_verify_password"
            android:text="请输入正确的密码"
            android:layout_below="@id/viewGroup_password"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="@dimen/y10"
            android:visibility="gone"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:background="@color/yellow"
            android:layout_below="@id/tv_verify_password"
            android:alpha="0.7"
            android:text="@string/btn_login"
            android:textSize="@dimen/y20"
            android:id="@+id/btn_login"
            android:onClick="onClickBtnLogin"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:gravity="center_vertical">
        <Button
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/x40"
            android:id="@+id/btn_forgetPassword"
            android:text="@string/forget"
            android:textSize="@dimen/x15"
            android:background="@android:color/transparent"
            android:gravity="left|center_vertical"
            android:onClick="onClickBtnForgetPassword"/>
        <Button
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x40"
            android:id="@+id/btn_register"
            android:text="@string/register"
            android:textSize="@dimen/x15"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:onClick="onClickBtnRegister"/>
    </RelativeLayout>

</LinearLayout>
