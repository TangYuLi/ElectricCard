<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y120">

    <LinearLayout
        android:id="@+id/linear_ib_fold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginRight="@dimen/x9"
        android:gravity="center_horizontal|right">

        <ImageButton
            android:id="@+id/ib_fold"
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x15"
            android:background="@mipmap/fold" />

    </LinearLayout>

    <View
        android:id="@+id/view_decoration"
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_below="@id/linear_ib_fold"
        android:background="@color/black" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_telList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_decoration"></android.support.v7.widget.RecyclerView>

</RelativeLayout>